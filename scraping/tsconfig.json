// The recommended TS build configuration for use with Node.js 18 LTS.
{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
