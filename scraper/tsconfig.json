// The recommended TS build configuration for use with Node.js 18 LTS.
{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",
  "include": ["**/*.mts"],
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es2022"],
    "module": "esnext",
    "target": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "outDir": "out"
  }
}
